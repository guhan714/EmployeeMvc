@model IEnumerable<Employee.Domain.Models.Role>

@{
    ViewData["Title"] = "Roles";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Roles</h2>
        <div class="text-center btn-sm btn-primary">
            <a class="text-white" asp-action="Create">
                <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>

    <table id="rolesTable" class="table table-hover table-bordered align-middle">
        <thead class="table-primary">
        <tr>
            <th>Role Name</th>
            <th class="text-center" style="width: 180px;">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RoleName</td>
                    <td class="">
                        <a asp-action="Edit" asp-route-id="@item.RoleId" class="text-primary me-2 d-inline-block" title="Edit">
                            <i class="bi bi-pencil-square"></i>
                        </a><a asp-action="Details" asp-route-id="@item.RoleId" class="text-info me-2 d-inline-block" title="Details">
                            <i class="bi bi-info-circle"></i>
                        </a><a asp-action="Delete" asp-route-id="@item.RoleId" class="text-danger d-inline-block" title="Delete">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#rolesTable').DataTable({
                responsive: true,
                pageLength: 10
            });
        });
    </script>
}
