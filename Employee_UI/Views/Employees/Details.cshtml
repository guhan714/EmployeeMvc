@model Employee.Domain.Models.Employees

@{
    ViewData["Title"] = "Employee Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="py-4" style="background-color: #f8f9fa;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow border-0 rounded-4">
                    <div class="card-body border border border-1 rounded-3 p-4">
                        <div class="row">
                            <!-- Left Profile Section -->
                            <div class="col-md-4 text-center border-primary border-end">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp"
                                     class="rounded-circle img-fluid mb-3" style="width: 140px;" alt="Profile Image" />
                                <h4 class="fw-bold mb-1">@Model.FirstName @Model.LastName</h4>
                                <p class="text-muted">@Model.Designation</p>
                                <p class="small text-muted">@Model.Address</p>
                                <p>
                                    Status :
                                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                        @(Model.IsActive ? "Active" : "Inactive")
                                    </span>
                                </p>

                                <div class="card mb-3 border-start-0 border-end-0 border-top-0 shadow-sm">
                                    <div class="card-header bg-secondary text-white">
                                        User Meta Info
                                    </div>
                                    <div class="card-body">
                                        <dl class="row mb-0">
                                            <dt class="col-sm-4 text-nowrap">Created Date</dt>
                                            <dd class="col-sm-8 text-muted">@Model.CreatedAt?.ToString("dd MMM yyyy hh:mm:tt")</dd>

                                            <dt class="col-sm-4 text-nowrap">Updated Date</dt>
                                            <dd class="col-sm-8 text-muted">@Model.UpdatedAt?.ToString("dd MMM yyyy hh:mm:tt")</dd>
                                        
                                            <dt class="col-sm-4 text-nowrap">Created By</dt>
                                            <dd class="col-sm-8 text-muted">@Model.CreatedBy</dd>

                                            <dt class="col-sm-4 text-nowrap">Updated By</dt>
                                            <dd class="col-sm-8 text-muted">@Model.ModifiedBy</dd>

                                        </dl>
                                    </div>
                                </div>
                            </div>

                            <!-- Right Info Section -->
                            <div class="col-md-8">
                                <!-- Personal Info Card -->


                                <div class="card mb-3 border-start-0 border-end-0 border-bottom-0 shadow-sm">
                                    <div class="card-header bg-primary text-white">
                                        Personal Info
                                    </div>
                                    <div class="card-body">
                                        <dl class="row mb-0">
                                            <dt class="col-sm-4">Full Name</dt>
                                            <dd class="col-sm-8 text-muted">@Model.FirstName @Model.LastName</dd>

                                            <dt class="col-sm-4">Email</dt>
                                            <dd class="col-sm-8 text-muted">@Model.Email</dd>

                                            <dt class="col-sm-4">Phone</dt>
                                            <dd class="col-sm-8 text-muted">@Model.PhoneNumber</dd>

                                            <dt class="col-sm-4">Address</dt>
                                            <dd class="col-sm-8 text-muted">@Model.Address</dd>

                                            <dt class="col-sm-4">Gender</dt>
                                            <dd class="col-sm-8 text-muted">@Model.Gender</dd>

                                            <dt class="col-sm-4">Date of Birth</dt>
                                            <dd class="col-sm-8 text-muted">@Model.DateOfBirth?.ToString("dd/MMM/yyyy")</dd>

                                            <dt class="col-sm-4">Blood Group</dt>
                                            <dd class="col-sm-8 text-muted">@Model.BloodGroup</dd>

                                            <dt class="col-sm-4">Marital Status</dt>
                                            <dd class="col-sm-8 text-muted">@Model.MaritalStatus</dd>
                                        </dl>
                                    </div>
                                </div>

                                <!-- Professional Info Card -->
                                <div class="card mb-3 border-start-0 border-end-0 border-top-0 shadow-sm">
                                    <div class="card-header bg-primary text-white">
                                        Professional Info
                                    </div>
                                    <div class="card-body">
                                        <dl class="row mb-0">
                                            <dt class="col-sm-4">Designation</dt>
                                            <dd class="col-sm-8 text-muted">@Model.Designation</dd>

                                            <dt class="col-sm-4">Department</dt>
                                            <dd class="col-sm-8 text-muted">@Model.Department?.DepartmentName</dd>

                                            <dt class="col-sm-4">Salary</dt>
                                            <dd class="col-sm-8 text-muted">@Model.Salary</dd>

                                            <dt class="col-sm-4">Date of Joining</dt>
                                            <dd class="col-sm-8 text-muted">@Model.DateOfJoining?.ToString("dd/MMM/yyyy")</dd>
                                        </dl>
                                    </div>
                                </div>


                                

                                <!-- Buttons -->
                                <div class="d-flex justify-content-end mt-3">
                                    <a asp-action="Index" class="btn btn-outline-secondary me-2"><i class="bi bi-box-arrow-left"></i></a>
                                    <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-primary">Edit</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
