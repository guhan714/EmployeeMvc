@model Employee.Domain.Models.Department

@{
    ViewData["Title"] = "Department Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow rounded w-50">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-info-circle-fill me-2"></i>Department Details</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">Department Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DepartmentName)</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model?.DepartmentId" class="btn btn-sm btn-outline-primary me-2">
                <i class="bi bi-pencil-square"></i> 
            </a>
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-arrow-left-circle"></i>
            </a>
        </div>
    </div>
</div>
