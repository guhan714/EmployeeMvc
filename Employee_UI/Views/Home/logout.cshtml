@{
    Layout = null;
    var userName = ViewBag.UserName;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Logout</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <style>
        body {
            background: linear-gradient(to right, #f8f9fa, #e9ecef);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .logout-card {
            max-width: 420px;
            width: 100%;
            border-radius: 1rem;
        }

        .logout-header {
            background: #dc3545;
            color: white;
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }

        .logout-body {
            background-color: #fff;
            padding: 1.5rem;
            border-bottom-left-radius: 1rem;
            border-bottom-right-radius: 1rem;
        }
    </style>
</head>
<body>
<div class="card logout-card shadow-lg">
    <div class="card-header logout-header d-flex align-items-center">
        <i class="bi bi-box-arrow-right fs-4 me-2"></i>
        <h5 class="mb-0">You've Been Logged Out</h5>
    </div>
    <div class="logout-body">
        <p class="mb-3">
            <i class="bi bi-person-circle me-2 text-secondary"></i>
            <strong>@userName</strong>, you have successfully logged out.
        </p>
        <p class="mb-4">
            <i class="bi bi-clock-history me-2 text-info"></i>
            Time spent in session: <strong>@ViewBag.TimeSpan</strong>
        </p>
        <div class="text-center">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary rounded-pill px-4">
                <i class="bi bi-box-arrow-in-right me-1"></i> Login Again
            </a>
        </div>
    </div>
</div>
</body>
</html>
